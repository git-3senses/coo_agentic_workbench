# ─── Database ───
DB_HOST=localhost
DB_PORT=3306
DB_USER=npa_user
DB_PASSWORD=npa_password
DB_NAME=npa_workbench

# SSL:
# - In production, DB_SSL_MODE defaults to "require" (certificate verification ON).
# - If your provider uses a non-standard CA, set DB_SSL_CA_FILE.
# - Only use DB_SSL_INSECURE as a last resort.
DB_SSL_MODE=disable
# DB_SSL_CA_FILE=/path/to/ca.pem
DB_SSL_INSECURE=false

# ─── Server Ports ───
REST_PORT=3002

# ─── Public URL ───
# Used in OpenAPI spec so Dify knows where to call tools
PUBLIC_URL=http://localhost:3002

# ─── Environment ───
ENV=development
